<?xml version="1.0" encoding="utf-8"?>
<com.chetdeva.madrasi.root.order.menu.menutoolbar.MenuToolbarView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="@string/app_name" />

        <ImageView
            android:id="@+id/cart_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@null"
            android:contentDescription="@string/cart"
            android:scaleType="fitCenter"
            android:layout_gravity="end"
            android:src="@drawable/ic_shopping_cart_black_24dp"
            android:tint="@android:color/white" />

        <TextView
            android:id="@+id/cart_quantity_textview"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:visibility="gone"
            android:background="@drawable/bg_oval_white"
            android:layout_gravity="end"
            tools:text="1" />

    </androidx.appcompat.widget.Toolbar>

</com.chetdeva.madrasi.root.order.menu.menutoolbar.MenuToolbarView>
